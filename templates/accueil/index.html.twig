{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row my-3">
            <h1 class="fw-bold col-10">Liste des disques ({{ nbDiscs }})</h1>
            <a href="#" class="btn btn-primary col-2">Ajouter</a>
        </div>
        <div class="row">
            {% for disque in disques %}
                <div class="col-6">
                    <div class="card mb-3">
                        <div class="row g-0 h-100">
                            <div class="col-5">
                                <img src="{{ asset('uploads/jaquettes/' ~ disque.picture) }}" 
                                     class="img-fluid rounded-start h-100 w-100"
                                     style="object-fit: cover;" 
                                     alt="Jaquette {{ disque.title }}">
                            </div>
                            <div class="col-7">
                                <div class="card-body h-100">
                                    <h5 class="card-title">{{ disque.title }}</h5>
                                    <p class="card-text fw-bold">{{ disque.artist.name }}</p>
                                    <p class="card-text">Label : <small class="text-body-secondary">{{ disque.label }}</small></p>
                                    <p class="card-text">Year : <small class="text-body-secondary">{{ disque.year }}</small></p>
                                    <p class="card-text">Genre : <small class="text-body-secondary">{{ disque.genre }}</small></p>
                                    <a href="#" class="btn btn-primary">Détails</a>
                                </div>
                            </div>
                        </div> 
                    </div>     
                </div>         
            {% else %}
                <p>Aucun disque trouvé.</p>
            {% endfor %}
        </div>
    </div> 
{% endblock %}
