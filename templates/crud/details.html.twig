{% extends 'base.html.twig' %}
{% block title %}Détails{% endblock %}

{% block body %}
<div class="container my-4">
    <h1 class="my-5 fw-bold text-center">Détails du disque</h1>

    <div class="row align-items-start gy-4">

        <!-- Colonne gauche : image -->
        <div class="col-md-6 text-center">
            <img src="{{ asset('/uploads/jaquettes/' ~ disque.picture) }}"
                 alt="Jaquette {{ disque.title }}"
                 class="img-fluid rounded-3 shadow-sm"
                 style="max-width: 100%; height: auto;">
        </div>

        <!-- Colonne droite : infos -->
        <div class="col-md-6">
            <div class="p-3 rounded-3">
                <h3 class="mb-3">{{ disque.title }}</h3>
                <p><strong>Artiste :</strong> {{ disque.artist.name }}</p>
                <p><strong>Année :</strong> {{ disque.year }}</p>
                <p><strong>Genre :</strong> {{ disque.genre }}</p>
                <p><strong>Label :</strong> {{ disque.label }}</p>
                <p><strong>Prix :</strong> {{ disque.price }} €</p>

                <div class="mt-5 d-flex flex-wrap gap-2">
                    <a href="{{ path('app_modify', {'id': disque.id}) }}" class="btn btn-outline-light">
                        Modifier
                    </a>

                    <form method="post"
                          action="{{ path('app_delete', {'id': disque.id}) }}"
                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce disque ?');"
                          class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ disque.id) }}">
                        <button class="btn btn-danger">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
