{% extends 'base.html.twig' %}
{% block title %}Détails{% endblock %} 
{% block body %}
<div class="container">
    <h1 class="my-3 fw-bold">Détails du disque</h1>
    <div class="mb-3">
        <div class="row mb-3">
            <div class="col-6">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" class="form-control" value="{{ disque.title }}" disabled>
            </div>
            <div class="col-6">
                <label for="artist" class="form-label">Artist</label>
                <input type="text" id="artist" class="form-control" value="{{ disque.artist.name }}" disabled>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-6">
                <label for="year" class="form-label">Year</label>
                <input type="text" id="year" class="form-control" value="{{ disque.year }}" disabled>
            </div>
            <div class="col-6">
                <label for="genre" class="form-label">Genre</label>
                <input type="text" id="genre" class="form-control" value="{{ disque.genre }}" disabled>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-6">
                <label for="label" class="form-label">Label</label>
                <input type="text" id="label" class="form-control" value="{{ disque.label }}" disabled>
            </div>
            <div class="col-6">
                <label for="price" class="form-label">Price</label>
                <input type="number" id="price" class="form-control" value="{{ disque.price }}" disabled>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-6">
                <label for="pic" class="form-label">Picture</label>
                <img src="{{ asset('/uploads/jaquettes/' ~ disque.picture) }}" class="img-fluid" alt="Jaquette {{ disque.title }}" >
            </div>
        </div>

        <a href="{{ path('app_modify', {'id': disque.id}) }}" class="btn btn-light">Modifier</a>

        <form method="post" action="{{ path('app_delete', {'id': disque.id}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer ce disque ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ disque.id) }}">
            <button class="btn btn-danger">Supprimer</button>
        </form>

        <a href="{{ path('app_accueil') }}" class="btn btn-primary">Retour</a>
    </div>
</div>
{% endblock %}
