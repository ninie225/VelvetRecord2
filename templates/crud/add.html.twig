{% extends 'base.html.twig' %}
{% block title %}Formulaire d'ajout{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="my-5 fw-bold text-center">Formulaire d'ajout</h1>

    <div class="row justify-content-center align-items-center">
        <!-- Partie gauche : Image -->
        <div class="col-md-6 text-center">
            <img 
                id="preview-image"
                src="{{ form.vars.data.picture ? asset('uploads/jaquettes/' ~ form.vars.data.picture) : asset('uploads/logo/pochette.png') }}" 
                alt="AperÃ§u"
                class="bg-transparent border-0 img-thumbnail">
        </div>

        <!-- Partie droite : Formulaire -->
        <div class="col-md-6">
            <div class="contact-form p-4 rounded-4 border border-light bg-transparent">
                {{ form_start(form) }}
                    {% for field in form %}
                        {{ form_widget(field, {
                            'label': false,
                            'attr': {
                                'placeholder': field.vars.label,
                                'class': 'form-control mb-3'
                            }
                        }) }}
                    {% endfor %}
                    <button class="btn btn-light mt-3" type="submit">
                        {{ button_label|default('Enregistrer') }}
                    </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<script>
    const fileInput = document.getElementById("{{ form.picture.vars.id }}");
    const preview = document.getElementById("preview-image");

    fileInput.addEventListener("change", function(event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result;
            }
            reader.readAsDataURL(file);
        } else {
            preview.src = "{{ asset('images/default-cover.jpg') }}";
        }
    });
</script>
{% endblock %}
